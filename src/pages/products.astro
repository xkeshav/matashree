---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import productJson from '../json/products.json';
import "../assets/styles/product.css"

const products = productJson;
---

<Layout title="Products - MataShree" description="Explore our wide range of premium home appliances including Cookers, Tawas, Utensils, and Glasswares">
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="page-hero">
      <div class="container">
        <div class="hero-content fade-in">
          <h1>Our Product Range</h1>
          <p>Discover premium home appliances from trusted brands with exceptional quality and performance</p>
        </div>
      </div>
    </section>

    <!-- Filter Section -->
    <section class="filter-section">
      <div class="container">
        <div class="filter-controls fade-in">
          <button class="filter-btn active" data-category="all">All Products</button>
          <button class="filter-btn" data-category="Cookers">Cookers</button>
          <button class="filter-btn" data-category="washing-machines">Tawas</button>
          <button class="filter-btn" data-category="air-conditioners">Utensils</button>
          <button class="filter-btn" data-category="kitchen">Glasswares</button>
        </div>
      </div>
    </section>

    <!-- Cookers Section -->
    <section class="products-section" id="Cookers">
      <div class="container">
        <div class="section-header fade-in">
          <h2>Cookers</h2>
          <p>Energy-efficient cooling solutions for every home size</p>
        </div>

        <div class="products-grid">
          {
            products.cookers.map((product, index) => (
              <div class="product-card slide-in-left" style={`animation-delay: ${index * 0.1}s`}>
                <div class="product-image">
                  <img src={product.image} alt={product.name} loading="lazy" />
                  <div class="product-overlay">
                    <button class="btn">Quick View</button>
                  </div>
                </div>
                <div class="product-info">
                  <div class="product-brand">{product.brand}</div>
                  <h3 class="product-name">{product.name}</h3>
                  <div class="product-features">
                    {product.features.map((feature) => (
                      <span class="feature-tag">{feature}</span>
                    ))}
                  </div>
                  <div class="product-bottom">
                    <div class="product-price">{product.price}</div>
                    <button class="btn btn-secondary">Add to Cart</button>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Tawas Section -->
    <section class="products-section" id="washing-machines">
      <div class="container">
        <div class="section-header fade-in">
          <h2>Tawas</h2>
          <p>Advanced washing technology for pristine clean clothes</p>
        </div>

        <div class="products-grid">
          {
            products.tawas.map((product, index) => (
              <div class="product-card fade-in" style={`animation-delay: ${index * 0.1}s`}>
                <div class="product-image">
                  <img src={product.image} alt={product.name} loading="lazy" />
                  <div class="product-overlay">
                    <button class="btn">Quick View</button>
                  </div>
                </div>
                <div class="product-info">
                  <div class="product-brand">{product.brand}</div>
                  <h3 class="product-name">{product.name}</h3>
                  <div class="product-features">
                    {product.features.map((feature) => (
                      <span class="feature-tag">{feature}</span>
                    ))}
                  </div>
                  <div class="product-bottom">
                    <div class="product-price">{product.price}</div>
                    <button class="btn btn-secondary">Add to Cart</button>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Utensils Section -->
    <section class="products-section" id="air-conditioners">
      <div class="container">
        <div class="section-header fade-in">
          <h2>Utensils</h2>
          <p>Efficient cooling systems for year-round comfort</p>
        </div>

        <div class="products-grid">
          {
            products.utensils.map((product, index) => (
              <div class="product-card slide-in-right" style={`animation-delay: ${index * 0.1}s`}>
                <div class="product-image">
                  <img src={product.image} alt={product.name} loading="lazy" />
                  <div class="product-overlay">
                    <button class="btn">Quick View</button>
                  </div>
                </div>
                <div class="product-info">
                  <div class="product-brand">{product.brand}</div>
                  <h3 class="product-name">{product.name}</h3>
                  <div class="product-features">
                    {product.features.map((feature) => (
                      <span class="feature-tag">{feature}</span>
                    ))}
                  </div>
                  <div class="product-bottom">
                    <div class="product-price">{product.price}</div>
                    <button class="btn btn-secondary">Add to Cart</button>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Glasswares Section -->
    <section class="products-section" id="kitchen">
      <div class="container">
        <div class="section-header fade-in">
          <h2>Glasswares</h2>
          <p>Smart kitchen solutions for modern cooking needs</p>
        </div>

        <div class="products-grid">
          {
            products.glassware.map((product, index) => (
              <div class="product-card fade-in" style={`animation-delay: ${index * 0.1}s`}>
                <div class="product-image">
                  <img src={product.image} alt={product.name} loading="lazy" />
                  <div class="product-overlay">
                    <button class="btn">Quick View</button>
                  </div>
                </div>
                <div class="product-info">
                  <div class="product-brand">{product.brand}</div>
                  <h3 class="product-name">{product.name}</h3>
                  <div class="product-features">
                    {product.features.map((feature) => (
                      <span class="feature-tag">{feature}</span>
                    ))}
                  </div>
                  <div class="product-bottom">
                    <div class="product-price">{product.price}</div>
                    <button class="btn btn-secondary">Add to Cart</button>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section class="services">
      <div class="container">
        <div class="section-header fade-in">
          <h2>Our Services</h2>
          <p>Complete support for all your appliance needs</p>
        </div>

        <div class="services-grid">
          <div class="service-card slide-in-left">
            <div class="service-icon">
              <i class="fas fa-truck"></i>
            </div>
            <h3>Free Delivery</h3>
            <p>Free delivery and installation for orders above â‚¹15,000 within Bengaluru</p>
          </div>

          <div class="service-card fade-in">
            <div class="service-icon">
              <i class="fas fa-tools"></i>
            </div>
            <h3>Expert Installation</h3>
            <p>Professional installation by certified technicians with 1-year service warranty</p>
          </div>

          <div class="service-card fade-in">
            <div class="service-icon">
              <i class="fas fa-shield-alt"></i>
            </div>
            <h3>Extended Warranty</h3>
            <p>Optional extended warranty plans for complete peace of mind</p>
          </div>

          <div class="service-card slide-in-right">
            <div class="service-icon">
              <i class="fas fa-headset"></i>
            </div>
            <h3>24/7 Support</h3>
            <p>Round-the-clock customer support and maintenance services</p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>



<script>
  // Filter functionality
  const filterBtns = document.querySelectorAll<HTMLElement>('.filter-btn');
  const productSections = document.querySelectorAll<HTMLElement>('.products-section');

  filterBtns.forEach((btn) => {
    btn.addEventListener('click', () => {
      // Remove active class from all buttons
      filterBtns.forEach((b) => b.classList.remove('active'));
      btn.classList.add('active');

      const category = btn.dataset.category;

      if (category === 'all') {
        productSections.forEach((section) => {
          section.style.display = 'block';
        });
      } else {
        productSections.forEach((section) => {
          if (section.id === category) {
            section.style.display = 'block';
          } else {
            section.style.display = 'none';
          }
        });
      }
    });
  });

  // Add to cart functionality (demo)
  document.querySelectorAll<HTMLButtonElement>('.btn-secondary').forEach((btn) => {
    btn.addEventListener('click', () => {
      if (btn.textContent === 'Add to Cart') {
        btn.textContent = 'Added!';
        btn.style.background = 'var(--secondary-color)';
        btn.style.borderColor = 'var(--secondary-color)';
        btn.style.color = 'var(--white)';

        setTimeout(() => {
          btn.textContent = 'Add to Cart';
          btn.style.background = 'transparent';
          btn.style.borderColor = 'var(--primary-color)';
          btn.style.color = 'var(--primary-color)';
        }, 2000);
      }
    });
  });

  // Quick view functionality (demo)
  document.querySelectorAll('.product-overlay .btn').forEach((btn) => {
    btn.addEventListener('click', () => {
      alert('Quick view feature coming soon!');
    });
  });
</script>
