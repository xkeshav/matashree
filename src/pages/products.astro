<Layout title="Products - MataShree" description="Explore our wide range of premium home appliances including refrigerators, washing machines, air conditioners, and kitchen appliances">
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="page-hero">
      <div class="container">
        <div class="hero-content fade-in">
          <h1>Our Product Range</h1>
          <p>Discover premium home appliances from trusted brands with exceptional quality and performance</p>
        </div>
      </div>
    </section>

    <!-- Filter Section -->
    <section class="filter-section">
      <div class="container">
        <div class="filter-controls fade-in">
          <button class="filter-btn active" data-category="all">All Products</button>
          <button class="filter-btn" data-category="refrigerators">Refrigerators</button>
          <button class="filter-btn" data-category="washing-machines">Washing Machines</button>
          <button class="filter-btn" data-category="air-conditioners">Air Conditioners</button>
          <button class="filter-btn" data-category="kitchen">Kitchen Appliances</button>
        </div>
      </div>
    </section>

    <!-- Refrigerators Section -->
    <section class="products-section" id="refrigerators">
      <div class="container">
        <div class="section-header fade-in">
          <h2>Refrigerators</h2>
          <p>Energy-efficient cooling solutions for every home size</p>
        </div>

        <div class="products-grid">
          {
            products.refrigerators.map((product, index) => (
              <div class="product-card slide-in-left" style={`animation-delay: ${index * 0.1}s`}>
                <div class="product-image">
                  <img src={product.image} alt={product.name} loading="lazy" />
                  <div class="product-overlay">
                    <button class="btn">Quick View</button>
                  </div>
                </div>
                <div class="product-info">
                  <div class="product-brand">{product.brand}</div>
                  <h3 class="product-name">{product.name}</h3>
                  <div class="product-features">
                    {product.features.map((feature) => (
                      <span class="feature-tag">{feature}</span>
                    ))}
                  </div>
                  <div class="product-bottom">
                    <div class="product-price">{product.price}</div>
                    <button class="btn btn-secondary">Add to Cart</button>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Washing Machines Section -->
    <section class="products-section" id="washing-machines">
      <div class="container">
        <div class="section-header fade-in">
          <h2>Washing Machines</h2>
          <p>Advanced washing technology for pristine clean clothes</p>
        </div>

        <div class="products-grid">
          {
            products.washingMachines.map((product, index) => (
              <div class="product-card fade-in" style={`animation-delay: ${index * 0.1}s`}>
                <div class="product-image">
                  <img src={product.image} alt={product.name} loading="lazy" />
                  <div class="product-overlay">
