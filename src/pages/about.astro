---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Avatar from '../components/Avatar.astro';
import "../assets/styles/about.css";
---

<Layout title="About Us - MataShree" description="Learn about our journey, mission, and commitment to bringing premium home appliances to Indian households">
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="page-hero">
      <div class="container">
        <div class="hero-content fade-in">
          <h1>About MataShree</h1>
          <p>Transforming Indian homes with premium appliances and exceptional service since 2015</p>
        </div>
      </div>
    </section>

    <!-- Story Section -->
    <section class="story">
      <div class="container">
        <div class="story-content">
          <div class="story-text slide-in-left">
            <h2>Our Story</h2>
            <p>
              Founded in 2011 with a simple vision: to make premium home appliances accessible to every Indian household. What started as a small family business in Bengaluru has grown into a trusted
              name across Karnataka and beyond.
            </p>

            <p>
              We believe that every home deserves appliances that combine cutting-edge technology with traditional Indian values of durability, efficiency, and family-first design. Our carefully
              curated selection represents the perfect harmony between innovation and reliability.
            </p>

            <div class="stats">
              <div class="stat-item">
                <div class="stat-number">10,000+</div>
                <div class="stat-label">Happy Customers</div>
              </div>
              <div class="stat-item">
                <div class="stat-number">500+</div>
                <div class="stat-label">Products Delivered Monthly</div>
              </div>
              <div class="stat-item">
                <div class="stat-number">98%</div>
                <div class="stat-label">Customer Satisfaction</div>
              </div>
            </div>
          </div>

          <div class="story-image slide-in-right">
            <img src="/images/about-story.jpg" alt="MataShree Store" loading="lazy" />
            <div class="image-decoration"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Mission & Vision -->
    <section class="mission-vision">
      <div class="container">
        <div class="mv-grid">
          <div class="mv-card fade-in">
            <div class="mv-icon">
              <i class="fas fa-bullseye"></i>
            </div>
            <h3>Our Mission</h3>
            <p>To empower every Indian household with premium, energy-efficient appliances that enhance daily life while respecting traditional values and environmental responsibility.</p>
          </div>

          <div class="mv-card fade-in">
            <div class="mv-icon">
              <i class="fas fa-eye"></i>
            </div>
            <h3>Our Vision</h3>
            <p>To become India's most trusted home appliance destination, known for quality products, exceptional service, and our commitment to customer satisfaction and sustainability.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Values -->
    <section class="values">
      <div class="container">
        <div class="section-header fade-in">
          <h2>Our Values</h2>
          <p>The principles that guide everything we do</p>
        </div>

        <div class="values-grid">
          <div class="value-card slide-in-left">
            <div class="value-icon">
              <i class="fas fa-heart"></i>
            </div>
            <h4>Customer First</h4>
            <p>Every decision we make puts our customers' needs and satisfaction at the center.</p>
          </div>

          <div class="value-card fade-in">
            <div class="value-icon">
              <i class="fas fa-shield-alt"></i>
            </div>
            <h4>Quality Assurance</h4>
            <p>We source only from trusted manufacturers and test every product for reliability.</p>
          </div>

          <div class="value-card fade-in">
            <div class="value-icon">
              <i class="fas fa-handshake"></i>
            </div>
            <h4>Trust & Integrity</h4>
            <p>Honest pricing, transparent policies, and genuine care for our customers' wellbeing.</p>
          </div>

          <div class="value-card slide-in-right">
            <div class="value-icon">
              <i class="fas fa-leaf"></i>
            </div>
            <h4>Sustainability</h4>
            <p>Promoting energy-efficient appliances that reduce environmental impact.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Team -->
    <section class="team">
      <div class="container">
        <div class="section-header fade-in">
          <h2>Meet Our Team</h2>
          <p>The passionate people behind MataShree</p>
        </div>

        <div class="team-grid">
          <div class="team-member slide-in-left">
            <div class="member-image">
              <Avatar name="Paratpa Ram" size={200} className="team-avatar" />
            </div>
            <div class="member-info">
              <h4>Pratapa Ram Patel</h4>
              <p class="member-role">Founder & CEO</p>
              <p class="member-bio">With 15+ years in the appliance industry, Pratapa Ram founded MataShree to make quality appliances accessible to every Indian family.</p>
            </div>
          </div>

          <div class="team-member fade-in">
            <div class="member-image">
              <Avatar name="Takhat Singh" size={200} className="team-avatar" />
            </div>
            <div class="member-info">
              <h4>Takhat Singh</h4>
              <p class="member-role">Operations Manager</p>
              <p class="member-bio">Takhat Singh ensures smooth operations and excellent customer service, bringing 10+ years of retail management experience.</p>
            </div>
          </div>

          <div class="team-member slide-in-right">
            <div class="member-image">
              <Avatar name="Arjun" size={200} className="team-avatar" />
            </div>
            <div class="member-info">
              <h4>Arjun</h4>
              <p class="member-role">Technical Head</p>
              <p class="member-bio">Arjun leads our installation and service team, ensuring every appliance is set up perfectly and maintained properly.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
      <div class="container">
        <div class="cta-content fade-in">
          <h2>Ready to Transform Your Home?</h2>
          <p>Visit our showroom or browse our products online to discover the perfect appliances for your family</p>
          <div class="cta-buttons">
            <a href="/products" class="btn">Explore Products</a>
            <a href="/contact" class="btn btn-secondary">Visit Our Store</a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

