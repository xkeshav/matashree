---
import { CONTACT_EMAIL, CONTACT_NUMBER, SHOP_ADDRESS } from '../constants';
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <div class="footer-brand">
          <div class="brand">
            <img src="/logo.svg" alt="MataShree" class="footer-logo" />
            <span class="brand-text">MataShree</span>
          </div>
          <p class="footer-desc">Your trusted partner for premium home appliances. Making Indian homes smarter, more efficient, and comfortable with cutting-edge technology.</p>
          <div class="social-links">
            <a href="#" aria-label="Facebook"><i class="fab fa-facebook"></i></a>
            <a href="#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
            <a href="#" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
            <a href="#" aria-label="YouTube"><i class="fab fa-youtube"></i></a>
          </div>
        </div>
      </div>

      <div class="footer-section">
        <h3>Quick Links</h3>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/about">About Us</a></li>
          <li><a href="/products">Products</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </div>

      <div class="footer-section">
        <h3>Products</h3>
        <ul>
          <li><a href="/products#refrigerators">Refrigerators</a></li>
          <li><a href="/products#washing-machines">Washing Machines</a></li>
          <li><a href="/products#air-conditioners">Air Conditioners</a></li>
          <li><a href="/products#kitchen">Kitchen Appliances</a></li>
        </ul>
      </div>

      <div class="footer-section">
        <h3>Support</h3>
        <ul>
          <li><a href="#">Customer Service</a></li>
          <li><a href="#">Warranty</a></li>
          <li><a href="#">Installation</a></li>
          <li><a href="#">Repair Services</a></li>
        </ul>
      </div>

      <div class="footer-section">
        <h3>Contact Info</h3>
        <div class="contact-info">
          <p><i class="fas fa-map-marker-alt"></i> <img src="/images/map-qr.jpeg" alt="Location QR" style={{height: "6rem", aspectRatio: 1}} /></p>
          <p><i class="fas fa-phone"></i> +91 {CONTACT_NUMBER}</p>
          <p><i class="fas fa-envelope"></i> {CONTACT_EMAIL}</p>
          <p><i class="fas fa-clock"></i> Mon-Sun: 8AM-10PM</p>
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <p>&copy; 2025 Matashree Home Appliances. All rights reserved.</p>
      <div class="footer-links">
        <a href="#">Privacy Policy</a>
        <a href="#">Terms of Service</a>
        <a href="#">Return Policy</a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--accent-color);
    color: var(--white);
    margin-top: auto;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr 1.5fr;
    gap: 2rem;
    padding: 3rem 0;
  }

  .footer-section h3 {
    color: var(--primary-color);
    margin-bottom: 1rem;
    font-size: 1.1rem;
    font-weight: 600;
  }

  .footer-brand .brand {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .footer-logo {
    width: 40px;
    height: 40px;
    filter: brightness(0) invert(1);
  }

  .footer-desc {
    color: #ccc;
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-links a {
    width: 40px;
    height: 40px;
    background: var(--primary-color);
    color: var(--white);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .social-links a:hover {
    background: var(--secondary-color);
    transform: translateY(-2px);
  }

  .footer-section ul {
    list-style: none;
  }

  .footer-section ul li {
    margin-bottom: 0.5rem;
  }

  .footer-section ul li a {
    color: #ccc;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-section ul li a:hover {
    color: var(--primary-color);
  }

  .contact-info p {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #ccc;
    margin-bottom: 0.75rem;
  }

  .contact-info i {
    color: var(--primary-color);
    width: 16px;
  }

  .footer-bottom {
    border-top: 1px solid #444;
    padding: 1.5rem 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-links {
    display: flex;
    gap: 2rem;
  }

  .footer-links a {
    color: #ccc;
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.3s ease;
  }

  .footer-links a:hover {
    color: var(--primary-color);
  }

  @media (max-width: 1024px) {
    .footer-content {
      grid-template-columns: 1fr 1fr 1fr;
      gap: 2rem;
    }

    .footer-section:first-child {
      grid-column: 1 / -1;
    }
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }

    .contact-info p {
      justify-content: center;
    }
  }
</style>

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
